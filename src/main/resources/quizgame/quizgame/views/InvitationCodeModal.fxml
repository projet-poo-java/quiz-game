<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;" 
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="quizgame.quizgame.controllers.InvitationCodeModalController">
    <Label text="Enter Invitation Code" style="-fx-font-size: 18;"/>
    <TextField fx:id="codeField" promptText="Enter code"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Submit" onAction="#onSubmit"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
