<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizgame.quizgame.controllers.ResultView">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="600.0" fitWidth="800.0" preserveRatio="false">
         <image>
            <Image url="@../../../images/purple_watercolour_background_corners.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="461.0" fitWidth="514.0" layoutX="143.0" layoutY="79.0">
         <image>
            <Image url="@../../../images/fireworks.png" />
         </image>
      </ImageView>

      <!-- Score Display -->
      <Label fx:id="scoreLabel" layoutX="300.0" layoutY="173.0" prefHeight="50.0" prefWidth="320.0" style="-fx-text-fill: Black; -fx-font-size: 25;" text="Your Score: 8/10">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>

      <!-- Congratulatory Text -->
      <Label layoutX="200.0" layoutY="52.0" prefHeight="100.0" prefWidth="410.0" style="-fx-text-fill: Black;" text="Congratulations!">
         <font>
            <Font name="System Italic" size="55.0" />
         </font>
      </Label>

      <!-- Medal Image -->
      <ImageView fitHeight="150.0" fitWidth="150.0" layoutX="325.0" layoutY="250.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/medal.png" />
         </image>
      </ImageView>

      <!-- Additional Message -->
      <Label fx:id="messageLabel" layoutX="300.0" layoutY="420.0" prefHeight="50.0" prefWidth="400.0" style="-fx-text-fill: Black; -fx-font-size: 18;" text="You did an amazing job!">
         <font>
            <Font name="System" size="20.0" />
         </font>
      </Label>

      <!-- Buttons -->
      <Button fx:id="retryButton" layoutX="250.0" layoutY="500.0" onAction="#onRetryClicked" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #533B7C; -fx-text-fill: white;" text="Retry" />
      <Button fx:id="exitButton" layoutX="450.0" layoutY="500.0" onAction="#onExitClicked" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: gray; -fx-text-fill: white;" text="Exit" />
   </children>
</AnchorPane>
